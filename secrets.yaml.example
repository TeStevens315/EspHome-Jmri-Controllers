# ESPHome Secrets Configuration Example
# Copy this file to secrets.yaml and update with your actual values
# DO NOT commit secrets.yaml to version control - keep your credentials private!

# WiFi Configuration
wifi_ssid: "Your_WiFi_Network_Name"
wifi_password: "your_wifi_password_here"

# Fallback WiFi (optional - for backup connection)
wifi_ssid_fallback: "Backup_WiFi_Network"
wifi_password_fallback: "backup_wifi_password"

# MQTT Broker Configuration
mqtt_broker: "192.168.1.100"  # IP address of your MQTT broker
mqtt_port: "1883"             # Default MQTT port (1883 for non-SSL, 8883 for SSL)
mqtt_username: "mqtt_user"    # MQTT broker username (if authentication is enabled)
mqtt_password: "mqtt_pass"    # MQTT broker password (if authentication is enabled)

# Home Assistant Configuration (if using Home Assistant integration)
homeassistant_api_key: "your_home_assistant_long_lived_access_token"
homeassistant_url: "http://192.168.1.101:8123"  # URL to your Home Assistant instance

# ESPHome Web Server (optional - for local device web interface)
web_server_port: "80"
web_server_auth_username: "admin"
web_server_auth_password: "your_device_password"

# OTA (Over-The-Air) Update Password
ota_password: "your_ota_update_password"

# Device Specific Settings (customize as needed)
device_name_prefix: "jmri"    # Prefix for device names (e.g., jmri-tc1, jmri-tc-servo)

# JMRI MQTT Topics (customize based on your JMRI configuration)
jmri_topic_prefix: "jmri"     # Base topic for JMRI communication

# Network Configuration (optional - for static IP)
# Uncomment and configure if you want static IP addresses
# static_ip: "192.168.1.150"
# gateway: "192.168.1.1"
# subnet: "255.255.255.0"
# dns1: "8.8.8.8"
# dns2: "8.8.4.4"
